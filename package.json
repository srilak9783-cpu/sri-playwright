{
  "name": "playwright-pom-framework",
  "version": "1.0.0",
  "description": "Complete Playwright framework with Page Object Model for e-commerce testing",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:ui": "npx playwright test --ui",
    "report": "npx playwright show-report",
    "test:smoke": "npx playwright test --grep @smoke",
    "test:regression": "npx playwright test --grep @regression",
    "test:api": "npx playwright test tests/api/",
    "test:e2e": "npx playwright test tests/e2e/",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "pre-commit": "npm run lint && npm run format",
    "allure:generate": "allure generate allure-results --clean",
    "allure:open": "allure open allure-results"
  },
  "keywords": [
    "playwright",
    "testing",
    "automation",
    "e2e",
    "pom",
    "page-object-model"
  ],
  "author": "Playwright POM Framework",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.41.2",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "allure-playwright": "^2.9.2",
    "csv-parse": "^6.1.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "faker": "^6.6.6"
  }
}
